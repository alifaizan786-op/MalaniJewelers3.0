        | split: '^'
      %}
      {% assign random_index = 'now' | date: '%S' | modulo: reviews.size %}
      {% assign selected_review = reviews[random_index] | split: '|' %}
      {% assign review_name = selected_review[0] %}
      {% assign review_text = selected_review[1] %}

      <table
        style="
          width: 90%;
          max-width: 600px;
          margin: 0 auto;
          background: #fff;
          text-align: center;
        "
      >
        <tr>
          <td style="padding: 2rem">
            <h2 style="color: #cfa96b; margin-bottom: 1rem;">Join 50,000+ Happy Customers</h2>
            <p style="font-size: 1.1rem; margin-bottom: 1rem; color: #666;">
              ‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê <br>
              "{{ review_text }}"
            </p>
            <p style="font-style: italic; color: #999;">- {{ review_name }}, Verified Customer</p>
          </td>
        </tr>
      </table>

      <!-- More Items -->
      <table
        style="
          width: 90%;
          max-width: 600px;
          margin: 0 auto;
          background: #fff;
          text-align: center;
        "
      >
        <tr>
          <td colspan="3">
            <h2 style="padding: 2rem 0">While You're Here</h2>
          </td>
        </tr>
        <tr>
          <td class="btn">
            <a
              href="{{ shop.url }}/collections/womens-new-arrivals"
              style="
                background: #cfa96b;
                color: #fff;
                padding: 1rem 2rem;
                border-radius: 5px;
                text-decoration: none;
              "
              >Women's New Arrivals</a
            >
          </td>
          <td class="btn">
            <a
              href="{{ shop.url }}/collections/mens-new-arrivals"
              style="
                background: #cfa96b;
                color: #fff;
                padding: 1rem 2rem;
                border-radius: 5px;
                text-decoration: none;
              "
              >Men's New Arrivals</a
            >
          </td>
          <td class="btn">
            <a
              href="{{ shop.url }}/collections/kids"
              style="
                background: #cfa96b;
                color: #fff;
                padding: 1rem 2rem;
                border-radius: 5px;
                text-decoration: none;
              "
              >Kids' Picks</a
            >
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <h3 style="padding-top: 2rem">Free Shipping on Orders $750+</h3>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <h3 style="padding-top: 2rem">
              Buy Now, Pay Later with
              <a
                href="{{ shop.url }}/pages/affirm"
                style="color: #cfa96b"
                >Affirm</a
              >
            </h3>
          </td>
        </tr>
      </table>

      <!-- Unsubscribe Footer -->
      <table
        style="
          width: 90%;
          max-width: 600px;
          margin: 0 auto;
          background: #f8f9fa;
        "
      >
        <tr align="center">
          <td style="padding: 1rem">
            <p style="margin: 0; font-size: 0.9rem; color: #666;">
              Don't want to receive cart reminders from us?
              <a href="{{ unsubscribe_url }}" style="color: #cfa96b;">Unsubscribe</a>
            </p>
          </td>
        </tr>
      </table>
    </section>
  </body>
</html>
